{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jumper",
  "version": "0.1.0",
  "identifier": "com.jumper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "title": "Jumper",
        "width": 1200,
        "height": 680,
        "minHeight": 380,
        "minWidth": 330
      },
      {
        "decorations": false,
        "title": "Debug",
        "label": "debug",
        "url": "/debug",
        "width": 700,
        "height": 700,
        "minHeight": 380,
        "minWidth": 500,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["jumper"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRDNDg2RUU2OTQxQzQwRTUKUldUbFFCeVU1bTVJVERmM3lUakhVQ2ZjaG1wa1VLR1lXM29aTVFkNnJjQi9yZmpyTFJ0TnY0V24K",
      "endpoints": [
        "https://github.com/LibertAntoine/Jumper/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "tauri-plugin-shell": {
      "scope": ["shell:allow-spawn"]
    }
  },
  "bundle": {
    "externalBin": ["bin/python/python"],
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
